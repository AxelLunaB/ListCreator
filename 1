<template>
  <div class="column is-full-fullhd is-full-widescreen is-full-desktop is-full-tablet">
    <!--<div class="column is-one-third-fullhd is-one-third-widescreen is-one-third-desktop is-one-third-tablet">-->
    <div class="card is-custom-card max-height " id="card">
       <div class="card-content">
         <div v-on:click="departmentClicked()" class="media has-pointer-cursor">
          <div class="columns is-full-fullhd is-full-widescreen is-full-desktop is-full-tablet">

            <div class="column">
              <div class="media-center logo-background-color">
                <figure class="image is-96x96">
                  <img :src="`/static/img/clusters/${department.cluster.code}.png`" class="cluster-logo-department"/>
                  <!-- <div class="cluster-logo-department"></div>-->
                </figure>
              </div>
            </div>

            <div class="column">
              <div class="media-content remove-overflow">
                <p class="title is-6"><b>{{department.cluster.name}}</b></p>
                <p class="subtitle is-6">{{department.level}} | #{{department.deptnumber}} Â· <span class="tag tag-fixed-size" :style="statusClass">{{department.status.name}}</span></p>
              </div>
            </div>

            <div class="column">
               M<sup>2</sup> T: {{department.terracem2}}<br>
               Tipo: {{department.type}}
            </div>

            <div class="column">
               M<sup>2</sup> C: {{department.constructionm2}}<br>
               Subtipo: {{department.subtype}}
            </div>

            <div class="column">
              Vista: {{department.view}}
              Cajones: {{department.cajones}}
            </div>

            <div class="column">
              PRECIO TOTAL: $ <b>{{toPrice(department.totalprice)}}</b>
            </div>

            <!-- <div class="column is-1">
              <span class="tag">{{department.cluster.code}}</span>
            </div> -->

            <!-- <div class="column is-1">
              <div v-on:click="coppyDepartmentClicked" class="column is-2 bring-to-front">
                  <i  class="fas fa-clone"></i>
                </div>
              </div> -->

          </div>
        </div>
      </div>
    </div>
  </div>
</template>

<script>
import statusColor from "../utils/statusColor.js";

/* id, cluster & type missing. */
export default {
  props: ["department"],
  mounted: function() {},
  data() {
    return {};
  },
  methods: {
    toPrice(x) {
      var r = x.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, "$1,");
      return r;
    },
    departmentClicked() {
      this.$eventHub.$emit("show-department-detail-modal", this.department);
    },
    coppyDepartmentClicked() {
      this.$eventHub.$emit("clone-department", this.department);
    }
  },
  computed: {
    statusClass() {
      var x = statusColor(this.department.status.name.toString());

      return `background-color: ${this.department.status.color_hex}; color: ${
        x.color
      }`;
    }
  }
};
</script>

